<div class="container mx-auto">
  <div class="card lg:card-side bg-base-100 shadow-xl w-full lg:w-1/3">
    <div class="card-body">
      <h1>フェス名</h1>
      <p class="text-lg font-bold mb-4"><%= @festival.name %></p>
      <h1>場所</h1>
      <p class="text-gray-700 mb-4"><%= @festival.location %></p>
      <h1>都道府県</h1>
      <p class="text-gray-700 mb-4"><%= @festival.prefecture%></p>
      <div class="card-actions justify-end">
        <%= link_to '戻る', festivals_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div>


