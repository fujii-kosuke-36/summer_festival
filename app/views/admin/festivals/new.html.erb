<h1 class="text-2xl font-bold mb-4">New Festival</h1>

<%= form_with(model: [:admin, @festival], url: admin_festivals_path, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block font-bold" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= form.label :location, class: "block font-bold" %>
    <%= form.text_field :location, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= form.label :prefecture, class: "block font-bold" %>
    <%= form.text_field :prefecture, class: "form-input" %>
  </div>

  <div class="mb-4">
    <%= form.label :region, class: "block font-bold" %>
    <%= form.text_field :region, class: "form-input" %>
  </div>

<div class="mb-4">
  <%= form.label :artists, class: "block font-bold" %>
  <% Artist.all.each do |artist| %>
    <div>
      <%= check_box_tag "festival[artist_ids][]", artist.id, @festival.artist_ids.include?(artist.id), class: "form-checkbox-multiselect" %>
      <%= label_tag "festival[artist_ids][]", artist.artist_name %>
    </div>
  <% end %>
</div>

<%= form.submit "Create Festival", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>


