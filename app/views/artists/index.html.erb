<div class="mb-8 text-center">
  <span class="text-3xl font-bold">
    Artists
  </span>
</div>
<div class='flex flex-wrap justify-center'>
  <% @artists.each do |artist| %>
    <div class="w-full max-w-sm rounded-lg xl:w-4/12 md:w-6/12">     
        <%= link_to image_tag(artist.artist_image), artist_path(artist) %>
        <div class="px-5 pb-5">
        <p class="text-3xl font-semibold tracking-tight text-gray-900 mb-4"><%= artist.artist_name %></p>
        </div>    
    </div>
  <% end %>
</div>

<%= paginate @artists %>

